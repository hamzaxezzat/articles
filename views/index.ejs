<%- include('./partials/header.ejs') %>

<!-- <div class="page-container"> -->
<!-- <div class="content-wrap"> -->
  <h2 class="mt-5"id="mytitle">Most Recent</h2>
  <div>
    <div class=" mb-5 text-white rounded bg-dark first_blog_photo"
      style="background-image:url(<%= arrArticle[0].photo %>)">
      <div class=" first_blog_post p-3 p-md-5 rounded ">

        <div class="col-md-6 px-0 ">

          <h1 class="display-4 font-italic">
            <%= arrArticle[0].title %>
          </h1>
          <p class="lead my-3">
            <%= arrArticle[0].summary %>
          </p>

          <p class="lead mb-0"><a href="/blogs/<%= arrArticle[0].slug  %>" class="text-white font-weight-bold">Continue
              reading...</a></p>
        </div>
      </div>
    </div>


    <div class="row mb-2">

      <% arrArticle.slice(1).forEach((item)=> { %>
        <div class="col-md-6 overflow-hidden">
          <div class="card flex-md-row mb-4 box-shadow  h-md-250  overflow-hidden">
            <div class="card-body d-flex flex-column align-items-start ">
            
              <strong class="d-inline-block mb-2 text-primary">
                <%= item.category %>
              </strong>
              <h3 class="mb-0">
                <a class="text-dark" href="/blogs/<%= item.slug  %>">
                  <%= item.title %>
                </a>
              </h3>
              <div class="mb-1 text-muted">
                <%= item.date.toLocaleDateString() %>
              </div>
            
              <p class="card-text mb-auto">
                <%= item.summary%>
              </p>
              
              <a class="btn" href="/blogs/<%= item.slug  %>">show more</a>
            </div>
            <a  href="/blogs/<%= item.slug  %>">
              <img class="card-img-right flex-auto d-none d-md-block" alt="Card image cap" src="<%= item.photo %>"
                width="200" height="250">
              </a>
          </div>
        </div>
        <% }); %>

    </div>
  </div>
  </div>

  <main role="main" class="container">
    <div class="row">
      <div class="col-md-8 blog-main">
        <h3 class="pb-3 mb-4 font-italic border-bottom">
          Featured Blog
        </h3>
        <% let featuredBlog=arrArticle.find(item=> item.slug === "how-to-post-a-bounty-on-webdevelopercom"); %>
        

          <h2>
            <%= featuredBlog.title %>
          </h2>
          <div class="blog-post">
            <p>
              <%- featuredBlog.sanitizedHtml %>
            </p>
          </div><!-- /.blog-post -->



      </div><!-- /.blog-main -->

      <aside class="col-md-4 blog-sidebar">
        <div class="p-3 mb-3 bg-light rounded">
          <h4 class="font-italic">About</h4>
          <p class="mb-0"> a Frontend Developer with a passion for creating visually stunning and user-friendly websites
            and applications. I specialize in Javascript and Reactjs.</p>
        </div>

        <div class="p-3">
          <h4 class="font-italic">Other Blogs</h4>
          <div class="row mb-2">

            <% arrArticle.slice(1).forEach((item)=> { %>

              <div class="">
                <div class="card flex-md-row mb-4 box-shadow  h-md-150  overflow-hidden">
                  <div class="card-body d-flex flex-column align-items-start ">
                    <strong class="d-inline-block mb-2 text-primary">
                      <%= item.category %>
                    </strong>
                    <h3 class="mb-0">
                      <a class="text-dark" href="/blogs/<%= item.slug  %>">
                        <%= item.title %>
                      </a>
                    </h3>
                    <div class="mb-1 text-muted">
                      <%= item.date.toLocaleDateString() %>
                    </div>
                    <p class="card-text mb-auto">
                      <%= item.summary%>
                    </p>
                    <a class="btn" href="/blogs/<%= item.slug  %>">show more</a>
                  </div>
                  
                </div>
              </div>
              <% }); %>
          </div>
        </div>
      </aside><!-- /.blog-sidebar -->

    </div><!-- /.row -->

  </main><!-- /.container -->
  <%- include('./partials/footer.ejs') %> 