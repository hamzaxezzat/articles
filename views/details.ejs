          <a class="p-2 text-muted" href="#">Style</a>
          <a class="p-2 text-muted" href="#">Travel</a>
        </nav>
      </div>
<div class="row justify-content-center">
        <div class="blog-post col-md-8 ">
            <h2 class="blog-post-title mt-5">
                <%= objArticle.title %>
            </h2>
            <p class="blog-post-meta"><%= objArticle.date.toLocaleDateString() %>  <%= objArticle.category %>  </p>
            <img src="<%= objArticle.photo %>" class="w-100" />
            
            
            <p>                 <%- objArticle.sanitizedHtml %>
            </p>

            <button   data-linkid="<%= objArticle._id %>" class="create btn btn-danger">
              Delete this article
          </button>
         
            
          </div>
        </div>

</div>

